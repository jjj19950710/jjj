<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.edu.bistu.cs.xiong.wordsbook">
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- android:name属性是用来设置所有activity 属于哪个application的，默认是android.app.Application。 -->
    <application
        android:name="cn.edu.bistu.cs.xiong.wordsbook.WordsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="cn.edu.bistu.cs.xiong.wordsbook.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="cn.edu.bistu.cs.xiong.wordsbook.WordDetailActivity"></activity>
        <activity android:name="cn.edu.bistu.cs.xiong.wordsbook.SearchOnline"></activity>
    </application>

</manifest>